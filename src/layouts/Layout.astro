---
import Navigation from "../components/Navigation.astro";
import { Image } from "astro:assets";
let { title } = Astro.props;

// Import images
import logoImage from "../images/PrimalCulture_Laurels.png";
import samfordLogo from "../images/SamfordSolutions.png";
import inkfinLogo from "../images/InkFin.png";
import FooterNav from "../components/FooterNav.astro";

const baseUrl = import.meta.env.BASE_URL;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="apple-touch-icon" sizes="180x180" href={`${baseUrl}/src/ico/apple-touch-icon.png`} />
    <link rel="icon" type="image/png" sizes="32x32" href={`${baseUrl}/src/ico/favicon-32x32.png`} />
    <link rel="icon" type="image/png" sizes="16x16" href={`${baseUrl}/src/ico/favicon-16x16.png`} />
    <!-- <link rel="stylesheet" href="../css/styles.css" /> -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
  </head>
  <body>
    <header>
      <div class="logo">
        <a href={baseUrl + "/"}>
          <Image src={logoImage} alt="Experience world-class tattoo artistry at Primal Culture Tattoo Studio" />
        </a>
      </div>
      <input type="checkbox" id="menu-toggle" />
      <label for="menu-toggle" class="menu-toggle">
        <span></span>
        <span></span>
        <span></span>
      </label>
      <Navigation />
    </header>
    <main>
      <slot />
      <div class="red-line"></div>
      <FooterNav />
      <div class="map-column">
        <div class="map-container">
          <div class="map-box">
            <iframe
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3306.547793009641!2d18.46117018908992!3d-34.02981675821442!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x1dcc42d1930f29d1%3A0xd74fc4ad673c110d!2sPrimal%20Culture%20Tattoo%20Studio!5e0!3m2!1sen!2sza!4v1729555759500!5m2!1sen!2sza"
              allowfullscreen=""
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"></iframe>
            <div class="reviews-container">
              <div class="star-rating">★★★★★</div>
              <div class="review-count">4.8 out of 5</div>
              <div class="review-count">Based on 150 reviews</div>
              <a href="https://g.page/r/your-google-review-link" target="_blank" class="google-review-link">Write a Review</a>
            </div>
          </div>
          <div class="map-content">
            <h3>Find Us At:</h3>
            <p>
              Unit 3, Clarewood<br />
              1 Annandale Road<br />
              Diep River, Cape Town, 7800 <br />
              <a href="tel:+27217071299" class="white-link"><i class="fa fa-phone fa-xs"></i>&nbsp; +27 21 707 1299&nbsp; </a>
              <br />
              <a href="mailto:info@primalculture.co.za" class="white-link"><i class="fa fa-envelope"></i>&nbsp; info@primalculture.co.za&nbsp; </a>
              <br />
              <a href="https://api.whatsapp.com/send?phone=27217071299&text=Hello%20Primal%20Culture%20Tattoo%20Studio" class="white-link" target="_blank"
                ><i class="fa fa-brands fa-whatsapp"></i>&nbsp; WhatsApp us now&nbsp;
              </a>
            </p>
          </div>
        </div>
      </div>
    </main>
    <main class="footer">
      <div class="footer-content">
        <div class="footer-column">
          <p>Terms of use | Privacy Policy</p>
          <code>
            <a href="https://www.samford.co.za" target="_blank">
              <Image src={samfordLogo} alt="Developed and maintained by Samford Solutions" class="samford-img" />
            </a>
          </code>
        </div>
        <div class="footer-column">
          <a href="https://tattoos.inkfin.co.za/" target="_blank">
            <Image src={inkfinLogo} alt="InkFin" />
          </a>
        </div>
      </div>
    </main>
  </body>
</html>
