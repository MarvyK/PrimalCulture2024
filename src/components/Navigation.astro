---
const baseUrl = import.meta.env.BASE_URL;
const currentPath = Astro.url.pathname;

const links = [
  { href: "/", label: "Home" },
  { href: "/aboutus", label: "About Us" },
  { href: "/community", label: "Community Outreach" },
  { href: "/bookings", label: "Bookings" },
  { href: "/mechandise", label: "Merchandise & Other" },
  { href: "/tattoocare", label: "Tattoo Care" },
  { href: "/contact", label: "Contact" },
];
---

<nav class="menu">
  <ul>
    {
      links.map((link) => (
        <li>
          <a href={`${baseUrl}${link.href}`} class:list={[{ active: currentPath === `${baseUrl}${link.href}` }]}>
            {link.label}
          </a>
        </li>
      ))
    }
  </ul>
</nav>
