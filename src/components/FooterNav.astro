---
const baseUrl = import.meta.env.BASE_URL.replace(/\/$/, '');
const currentPath = Astro.url.pathname;

const links = [
  { href: `${baseUrl}/`, label: "Home" },  // No trailing slash
  { href: `${baseUrl}/aboutus`, label: "About Us" },
  { href: `${baseUrl}/community`, label: "Community Outreach" },
  { href: `${baseUrl}/booking`, label: "Bookings" },
  { href: `${baseUrl}/merchandise`, label: "Merchandise & Other" },
  { href: `${baseUrl}/tattoocare`, label: "Tattoo Care" },
  { href: `${baseUrl}/contact`, label: "Contact" },
];
---

<div class="footer-nav">
  <!-- <a href="#" class="bevelled-button">Click Me</a> -->
  <nav>
    <ul>
      {
        links.map((link) => (
          <li>
            {/* <a href={`${baseUrl}${link.href}`} class:list={[{ active: currentPath === `${baseUrl}${link.href}` }]}>
              {link.label}
            </a> */}
            <a href={`${baseUrl}${link.href}`} class:list={["active", "bevelled-button", { active: currentPath === `${baseUrl}${link.href}` }]}>
              {link.label}
            </a>
          </li>
        ))
      }
    </ul>
  </nav>
</div>
